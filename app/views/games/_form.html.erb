<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= fields_for :results do |d| %>
    <div class="row-fluid">
      <div class="span12">
        <div class="row-fluid">
          <div class="span6">
            Player
            <div class="row-fluid">
              <%= select_tag :player_one, options_from_collection_for_select(Player.all, :id, :name) %>
            </div>
            <div class="row-fluid">
              <%= select_tag :player_two, options_from_collection_for_select(Player.all, :id, :name) %>
            </div>
          </div>
          <div class="span4">
            Score
            <div class="row-fluid">
              <%= d.number_field :player_one_score %>
            </div>
            <div class="row-fluid">
              <%= d.number_field :player_two_score %>
            </div>
          </div>  
          <div class="span2">
            Winner
            <div class="row-fluid">
              <%= d.check_box :player_one_winner %>
            </div>
            <div class="row-fluid">
              <%= d.check_box :player_one_winner %>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span9">
            Comments
            <div class="row-fluid">
              <%= f.text_area :comment, :size => "120x2" %>
            </div>            
          </div>        
           <div class="span3">
            Game Type
            <div class="row-fluid">
              <%= f.select :game_type_id, options_from_collection_for_select(GameType.all, :id, :name) %>
            </div>            
          </div>        
      </div>
    </div>
   <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
