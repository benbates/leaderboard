<h1>Leaderboard</h1>

<%= render 'layouts/game_type_tabs' %>
<table class="table table-striped table-bordered">
  <thead>
  	<tr>
      <th>Name</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Win %</th>
      <th>Points For</th>
      <th>Points Against</th>
  	</tr>
  </thead>
  <tbody>
    
<% @players.each do |player| %>
    <tr>
      
      <td><%= link_to player.name, player %></td>
  	  <td class="center"><%= player.win_count %></td>
  	  <td class="center"><%= player.results.count(:conditions => {:winner => false}) %></td>
  	  <td class="center"><%= player.games.count > 0 ? number_with_precision(player.win_count.to_f/(player.results.count(:conditions => {:winner => false}) + player.win_count), :precision => 3) : '0.000' %></td>
  	  <td class="center"><%= player.points_for %></td>
  	  <td class="center"><%= player.points_against %></td>
    </tr>
<% end %>
  </tbody>
</table>

<br />