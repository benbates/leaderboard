<% provide(:title, @player.name) %>
<p id="notice"><%= notice %></p>
<h1><%= @player.name %></h1>

<%= render 'layouts/single_stats' %>


<ul class="nav nav-tabs">
  <li class="active"><a href="#opponents" data-toggle="tab">Opponents</a></li>
  <li><a href="#games" data-toggle="tab">Games</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="opponents"><%= render 'layouts/opponents' %></div>
  <div class="tab-pane" id="games">
    <%= will_paginate @games, :params => {:anchor => "games"} %>

    <%= render 'layouts/game' %>    

    <%= will_paginate @games%>
  </div>
</div>
<%= link_to 'Back', players_path %>

