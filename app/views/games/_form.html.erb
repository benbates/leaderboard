<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  	<%= fields_for :results do |d| %>
    <table class="table">
    <tr>
      <th>Player</th>
      <th>Score</th>
      <th>Winner</th>
		<tr>
			<td><%= select_tag :player_one, options_from_collection_for_select(Player.all, :id, :name) %></td>
			<td><%= d.number_field :player_one_score %></td>
			<td><%= d.check_box :player_one_winner %></td>
		</tr>
		<tr>
			<td><%= select_tag :player_two, options_from_collection_for_select(Player.all, :id, :name) %></td>
			<td><%= d.number_field :player_two_score %></td>	
			<td><%= d.check_box :player_two_winner %></td>
		</tr>
		<tr>
		  <th>Comment</th>
		  <th>Game Type</th>
		</tr>
		<tr>
		  <td class="span9"><%= f.text_field :comment %></td>
		  <td><%= f.select :game_type_id, options_from_collection_for_select(GameType.all, :id, :name) %></td>
		</tr>
		</table>
	<% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
