<h1>Leaderboard</h1>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Wins</th>
          <th>Losses</th>
          <th>Win %</th>
          <th>Avg PF</th>
          <th>Avg PA</th>
          <th>Diff</th>          
          <th>Streak</th>
        </tr>
      </thead>
      <tbody>   
        <% @players.each do | player | %>
          <tr>
          	<td><%= link_to player.name, player %></td>
	     	<td class="center"><%= win_count(player, 0) %></td>
	        <td class="center"><%= losses(player, 0) %></td>
	    	<td class="center"><%= win_percent(player, 0) %></td>
	     	<td class="center"><%= points_for(player, 0) %></td>
	     	<td class="center"><%= points_against(player, 0) %></td>
            <td class="center<%= diff(player, 0) > 0 ? " text-success" : " text-error" %>"><%= diff(player, 0) %></td>         	  
            <td class="center<%= curr_streak(player) == true ? " text-success" : " text-error" %>"><%= streak(player) %></td>         	  
          </tr>
        <% end %>
      </tbody>
    </table>
